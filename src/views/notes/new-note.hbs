<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>New Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">
                <div>
                    <input type="text" name="title" placeholder="Title" class="form-control my-2">

                    <textarea name="description" placeholder="Write description..."
                        class="form-control my-2"></textarea>
                </div>
                <div class="d-grid ">
                    <button class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>